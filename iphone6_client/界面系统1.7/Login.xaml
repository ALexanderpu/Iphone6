<Window x:Class="iphone6.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="300"
        WindowStyle = "None"
        AllowsTransparency="True">
    
    <Window.Background>
        <ImageBrush ImageSource="Images\background1.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label Content="电话" HorizontalAlignment="Left" Margin="22,162.84,0,0" VerticalAlignment="Top" FontFamily="David" FontSize="24" FontWeight="Bold" Foreground="#FFB47214" Background="{x:Null}"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="27.26,256.84,0,0" VerticalAlignment="Top" FontFamily="David" FontSize="24" FontWeight="Bold" Width="52.74" Foreground="#FFCF9440"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="27.26,346.16,0,0" VerticalAlignment="Top" FontFamily="David" FontSize="24" FontWeight="Bold" RenderTransformOrigin="0.226,0.31" Foreground="#FFDC8E1C"/>
        <TextBox x:Name="PH" HorizontalAlignment="Left" Height="34" Margin="92,162.84,0,0" TextWrapping="Wrap" Text="12345678901" VerticalAlignment="Top" Width="168" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="SIP" HorizontalAlignment="Left" Height="34" Margin="92,256.84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.325,-0.609" TextChanged="TextBox_TextChanged_1" Text="192.168.137.1"/>
        <TextBox x:Name="Port" HorizontalAlignment="Left" Height="34.16" Margin="92,346,0,0" TextWrapping="Wrap" Text="13000" VerticalAlignment="Top" Width="168" TextChanged="TextBox_TextChanged"/>
        <!--<Button Content="Login" HorizontalAlignment="Left" Margin="98,419,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" FontFamily="Curlz MT" FontWeight="Bold" FontSize="16"/>-->
        <Image x:Name="login_Click" Height="50" Margin="122.74,440,127.26,110"  Width="50" Source="Images\login1.png" MouseLeftButtonDown="Login_Click" OpacityMask="Black" RenderTransformOrigin="0.133,0.7"/>
        <Button x:Name="StartButton" Content="" HorizontalAlignment="Left" Margin="136,549,0,0" VerticalAlignment="Top" Width="27" RenderTransformOrigin="-0.182,0.842" Click="StartButton_Click" Height="25" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Visibility="Visible" BorderBrush="#FF060606">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.363"/>
                    <GradientStop Color="Black"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
    </Grid>
</Window>

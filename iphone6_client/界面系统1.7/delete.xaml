<Window x:Class="iphone6.delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="delete" Height="600" Width="300"
        WindowStyle = "None"
        AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="Images\background1.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label Content="DELETE ?" HorizontalAlignment="Left" Height="99" Margin="40,231,0,0" VerticalAlignment="Top" Width="220" FontSize="66" FontWeight="Bold" RenderTransformOrigin="0.49,0.404" FontFamily="Mistral" Background="{x:Null}"/>
        <Image x:Name="ok" Height="50" Margin="55,445,195,0" VerticalAlignment="Top" Width="50" Source="Images\Tick.png" MouseLeftButtonDown="ok_Click" OpacityMask="#FFAE6464" RenderTransformOrigin="0.133,0.7"/>
        <Image x:Name="no" Height="50" Margin="195,445,55,0" VerticalAlignment="Top" Width="50" Source="Images\failed.png" MouseLeftButtonDown="no_Click" OpacityMask="Black" RenderTransformOrigin="0.133,0.7"/>
    </Grid>
</Window>

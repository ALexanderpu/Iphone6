<Window x:Class="iphone6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="300"
        WindowStyle = "None"
        AllowsTransparency ="True">
    <Window.Background>
        <ImageBrush ImageSource="Images\Start.png"/>
    </Window.Background>
    <Grid>
        <Button x:Name="StartButton" Content="" HorizontalAlignment="Left" Margin="140,552,0,0" VerticalAlignment="Top" Width="20" RenderTransformOrigin="-0.182,0.842" Click="StartButton_Click" Height="20" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Visibility="Visible">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.363"/>
                    <GradientStop Color="Black"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
    </Grid>
</Window>
